<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>WebStudy05_SpringBoard</display-name>
	<welcome-file-list>
		<welcome-file>index.do</welcome-file>
	</welcome-file-list>
	
	<!-- 상위 컨테이너에 등록할 bean definition이 등록된 설정 파일의 위치 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/*-context.xml</param-value>
	</context-param>

	<!-- ServletContect initialized 이벤트에서(서버가 구동이 될 때) 상위 컨테이너 생성을 위한 이벤트 핸들러 , 이게 생성되는 순간 상위 컨테이너에 대한 레퍼런스를 ServletContext에 넣어줌-->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- 관행적으로 listener 아래에 넣음. 밑에 넣는다고 동작 안하는 것은 아님 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>MultipartFilter</filter-name> <!-- 얘 혼자 못 쓰이고 Multipart Resolver가 같이 있어야 하는데 이때 서블릿 스펙 2.x냐 3.x냐를 알아야 함 -->
		<filter-class>org.springframework.web.multipart.support.MultipartFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MultipartFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- The front controller of this Spring Web application, responsible for handling all application requests -->
	<!-- Spring MVC 프로그래밍 모델이 동작하기 위한 하위 컨테이너 생성 -->
	<!-- 이게 생성되는 순간 하위 컨테이너에 대한 레퍼런스를 ServletContext에 넣어줌 -->
	<servlet>
		<servlet-name>appServlet</servlet-name> <!-- 하위 컨테이너의 이름 역할을 함 -->
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup> <!-- 손님이 오기 전에 정문에서 준비를 하겠다는 것 -->
		<!-- Part API를 이용해 multipart 요청을 파싱할 수 있도록 함 -->
		<!-- Servlet spec 3.x 방식의 MultipartFilter를 활용할 수 있도록 함 -->
<!-- 		<multipart-config></multipart-config> --> <!-- 2버전 사용해보기. part 못 씀 fileupload 써보기 -->
	</servlet>

	<!-- Map all requests to the DispatcherServlet for handling -->
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern> <!-- 정적자원 요청 -->
		<url-pattern>/index.do</url-pattern>
	</servlet-mapping>
	

	
</web-app>